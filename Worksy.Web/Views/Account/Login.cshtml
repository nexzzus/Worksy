@model Worksy.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
    ViewData["HeaderClass"] = "sticky-top";
    ViewData["HideFooter"] = true;
}

<head>
    <link href="~/css/login.css" rel="stylesheet">
</head>

<main id="main">
    <section class="h-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-11">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <!-- Lado izquierdo: formulario -->
                            <div class="col-lg-6" style="background-color: #ffffff">
                                <div class="card-body p-md-5 mx-md-4">
                                    <div class="text-center">
                                        <img src="~/img/logos/1.png" style="width: 85px" alt="logo">
                                        <h4 class="mt-3 mb-5 pb-1">Bienvenido a Worksy</h4>
                                    </div>

                                    <!-- Formulario funcional -->
                                    <form asp-controller="Account" asp-action="Login" method="POST" id="loginForm">
                                        @Html.AntiForgeryToken()

                                        <h2 class="mb-4 text-center">Iniciar sesión</h2>

                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                        <!-- Email -->
                                        <div class="form-outline mb-4">
                                            <label class="form-label" asp-for="Email">Correo electrónico</label>
                                            <input asp-for="Email" class="form-control" type="email" placeholder="Correo electrónico" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <!-- Contraseña -->
                                        <div class="form-outline mb-4 position-relative">
                                            <label class="form-label" asp-for="Password">Contraseña</label>
                                            <input asp-for="Password" id="txtPasswordIniciar" class="form-control" type="password" placeholder="Contraseña" />
                                            <button id="show_password" class="btn position-absolute top-50 end-0 translate-middle-y me-2" type="button" onclick="mostrarPassword()">
                                                <img src="~/img/ojo.png" style="width: 20px;">
                                            </button>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="text-center pt-1 mb-4 pb-1">
                                            <button type="submit" class="btn btn-outline-primary">Iniciar sesión</button>
                                            <p class="forgot-pass">
                                                <a asp-controller="Account" asp-action="ForgotPassword" class="text-muted">¿Olvidaste tu contraseña?</a>
                                            </p>
                                        </div>
                                    </form>

                                    <div class="social-media text-center mt-3">
                                        <ul class="list-inline">
                                            <li class="list-inline-item"><i class="bi bi-facebook"></i></li>
                                            <li class="list-inline-item"><i class="bi bi-twitter"></i></li>
                                            <li class="list-inline-item"><i class="bi bi-linkedin"></i></li>
                                            <li class="list-inline-item"><i class="bi bi-instagram"></i></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Lado derecho -->
                            <div class="col-lg-6 d-flex align-items-center"style="background: #323d5c;background: linear-gradient(135deg, #0d1b2a 0%, #1b263b 50%, #415a77 100%);" >
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">¿Eres nuevo en Worksy?</h4>
                                    <p class="small mb-4">
                                        ¡Regístrate y descubre un mundo de oportunidades y servicios personalizados!
                                        Si ya haces parte de Worksy, inicia sesión y continúa aprovechando todos nuestros beneficios.
                                    </p>
                                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">Regístrate</a>
                                </div>
                            </div>
                        </div> <!-- row -->
                    </div> <!-- card -->
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Template Main JS File -->
<script src="~/js/script.js"></script>

<script type="text/javascript">
    function mostrarPassword() {
        var cambio = document.getElementById("txtPasswordIniciar");
        if (cambio.type === "password") {
            cambio.type = "text";
            $('#show_password img').attr('src', '~/img/ojo-cerrado.png');
        } else {
            cambio.type = "password";
            $('#show_password img').attr('src', '~/img/ojo.png');
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
