@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "_Layout";
}

@*TODO: arreglas estilos*@

<form asp-action="ForgotPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="Correo electrónico"/>
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Enviar enlace de recuperación</button>
</form>