@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "_Layout";
    ViewData["HeaderClass"] = "sticky-top";
    ViewData["HideFooter"] = true;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card bg-dark text-white border-0 shadow">
                <div class="card-header bg-dark text-white"> 
                    <h5 class="mb-0">Recuperar contraseña</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ForgotPassword" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email"
                                   class="form-control"
                                   type="email"
                                   placeholder="Correo electrónico"
                                   autocomplete="email"
                                   autofocus />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Enviar enlace de recuperación
                        </button>

                        <div class="mt-3 text-center">
                            <a asp-controller="Account" asp-action="Login" class="link-light text-decoration-none">
                                ← Volver a iniciar sesión
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-muted small text-center mt-3">
                Te enviaremos un correo con instrucciones para restablecer tu contraseña.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
