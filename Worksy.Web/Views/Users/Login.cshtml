@model Worksy.Web.DTOs.LoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="m-0">Iniciar Sesión</h3>
    </div>

    <div class="card-body">
        <form asp-action="Login" method="POST" class="row g-3">
            <!-- Resumen de validación -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="col-md-12 form-floating">
                <input asp-for="Email" class="form-control" placeholder="Correo electrónico"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-12 form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-md-12 form-check">
                <input asp-for="RememberMe" class="form-check-input"/>
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            
            <div>
                // TODO: Implementar funcionalidad de recuperación de contraseña
                <a asp-action="#">Olvidé mi contraseña</a>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
}