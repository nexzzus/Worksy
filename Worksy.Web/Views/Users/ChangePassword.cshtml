@model ChangePasswordViewModel

@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "_Layout";
    ViewData["HeaderClass"] = "sticky-top";
    ViewData["HideFooter"] = false;
}

<style> 


    .card {
        background-color: #1b263b;
        border: none;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
    }

    .card-header {
        background-color: #415a77 !important;
        color: #fff !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .form-control {
        background-color: #27364f;
        border: 1px solid #415a77;
        color: #f8f9fa;
    }

    .form-control:focus {
        background-color: #2e3f5d;
        border-color: #778da9;
        color: #fff;
        box-shadow: none;
    }

    label {
        color: #e0e6ed;
    }

    .btn-primary {
        background-color: #415a77;
        border: none;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background-color: #778da9;
    }</style>

<div class="container p-0">
    <div class="row">
        <!-- Sidebar -->
        @await Html.PartialAsync("_SlideBarProfile")

        <!-- Content -->
        <div class="col-md-7 col-xl-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Cambiar contraseña</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="ChangePassword">
                        <div class="mb-3">
                            <label asp-for="OldPassword"></label>
                            <input type="password" class="form-control" asp-for="OldPassword"
                                   placeholder="Contraseña actual" required/>
                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword"></label>
                            <input type="password" class="form-control" asp-for="NewPassword"
                                   placeholder="Nueva contraseña" required/>
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword"
                                   placeholder="Confirmar contraseña" required/>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>


                        <button type="submit" class="btn btn-primary w-100">Cambiar contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
