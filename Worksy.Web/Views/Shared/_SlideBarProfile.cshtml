    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Ajustes de perfil</h5>
        </div>
        @{
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        }

        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action @(currentAction == "Profile" ? "activate" : "")"
               asp-controller="Users" asp-action="Profile">
                Cuenta
            </a>
            <a class="list-group-item list-group-item-action @(currentAction == "ChangePassword" ? "activate" : "")"
               asp-controller="Users" asp-action="ChangePassword">
                Contrase√±a
            </a>
        </div>
    </div>
</div>